<div class="dashboard-menu-container">
  <div class="dashboard-menu">
    <%= link_to(dashboard_bookings_path) do %>
      <div class="dashboard-menu-item <%= class_if_path("active", "^/(dashboard/)?bookings") %>">
        <p>Mes réservations</p>
      </div>
    <% end %>
    <%= link_to(dashboard_bars_path) do %>
      <div class="dashboard-menu-item <%= class_if_path("active", "bars") %>">
