<h1>Bars#index</h1>

<div class="navbar">
  NAVBAR
</div>

<div class="container">
  <div class="row">
    <div class="searchbar">

    </div>
  </div>
  <div class="card-bars">
    <div class="row">
      <div class="col-8 d-flex wrap"></div>
        <% @bars.each do |bar| %>
          <div class="card-bar-info col-4 bg-light shadow rounded border m-3 p-2 " >
            <%= link_to bar_path(bar) do %>
              <%= image_tag "https://media.gettyimages.com/photos/the-place-to-go-to-have-fun-picture-id896799190?s=612x612", alt: "alttext", class:'w-100' %>
              <p><%= bar.address %></p>
              <h3><%= bar.name %></h3>
              <p><%= bar.description %></p>
              <p><%= bar.capacity %> personnes</p>
              <p>Dès <%= bar.price %> €</p>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="map col-4">
        <%= image_tag "https://www.hashtagvoyage.fr/wp-content/uploads/2017/03/google-maps-sauvegarder-points-interet.png", alt: "alttext" %>
      </div>
    </div>
  </div>
</div>




