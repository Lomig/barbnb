<div class="dashboard">
  <%= render "components/dashboard_menu" %>
  <% if @bookings.first.is_a? Booking %>
    <div class="dashboard-content">
      <div class="bookings-content">
        <h1><%= @bookings.first.bar.name %></h1>
        <h2>Détail des réservations</h2>
        <%= render "bookings_list", bookings: @bookings %>
      </div>
    </div>
  <% else %>
    <div class="empty-container">
      <h1>Vous n'avez pas encore de booking pour ce bar !</h1>
    </div>
  <% end %>
</div>
