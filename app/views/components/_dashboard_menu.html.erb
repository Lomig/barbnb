      </div>
    <% end %>
    <%= link_to(edit_user_registration_path) do %>
      <div class="dashboard-menu-item <%= class_unless_path("active", "(bookings|bars)") %>">
        <p>Mon profil</p>
      </div>
    <% end %>

  </div>
</div>
