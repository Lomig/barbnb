
<%#
Usage:
< %= render "components/home/home_card",
            image: "<image name>",
            title: "<card title>",
            description: "<card description>",
            color: "<color class name>"
% >
%>

<% 
image = "media/assets/images/" + local_assigns[:image]
title = local_assigns[:title]
description = local_assigns[:description]
color = local_assigns[:color]
%>

<div class="home-card <%= color %>">
  <%= image_pack_tag image, alt: "logo", class: "icon" %>
  <div class="home-card-title">
    <h4><%= title %></h4>
  </div>
  <div class="home-card-desc">
    <p><%= description %></p>
  </div>
</div>
