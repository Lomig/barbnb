<% text = yield.presence || local_assigns.fetch(:text) %>
<% action = local_assigns.fetch(:action) %>
<% target = local_assigns.fetch(:target) %>
<% classes = local_assigns.fetch(:class) %>

<button type="button" data-action="<%= action %>" data-target="<%= target %>" class="btn btn-default waves-effect waves-light <%= classes %>"><%= message %></button>
